@model IEnumerable<ContosoUniversity.Models.Livre>



@{
    ViewBag.Title = "Index";
}

<h2>Liste des Livres</h2>

<p>
    @Html.ActionLink("Ajoutez un nouveau", "Create")
</p>

@using (Html.BeginForm())
{
  
<p>
    @Html.DropDownList("id_genre", null, htmlAttributes: new { @class = "form-control" })
    <br />
    <input class="form-control mb-2" id="SearchString" name="SearchString" type="text" value="" />
    <input type="submit" value="search" class="btn btn-outline-primary" />
</p>
}


<div class="container-fluid">
    <table class="table table-striped table-bordered" id="example" >
        <thead class="thead-dark">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.langue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nbre_page)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image_livre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.date_parution)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Auteur.nom_auteur)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courant.libelle_courant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre.libelle_genre)
                </th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.langue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nbre_page)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image_livre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_parution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Auteur.nom_auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Courant.libelle_courant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.libelle_genre)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id_livre }, new { @class = "btn btn-success btn-sm m-2" })
                    @Html.ActionLink("Details", "Details", new { id = item.id_livre }, new { @class = "btn btn-secondary btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id_livre }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</div>

